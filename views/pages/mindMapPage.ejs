<!-- This entire application is likely to be single-screen: This page will form that! -->
<!-- To avoid preposterous amounts of code inside of one file, we will use EJS 'partials' to separate the
  -- page information into multiple files.
  -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> <%= projectName %> - Holisitk</title>
    <link rel="stylesheet" href="/stylesheets/mindMapPageStyling.css">
    <link rel="stylesheet" href="/stylesheets/canvasStyling.css">
    <link rel="stylesheet" href="/stylesheets/sidebarStyling.css">
    <link rel="stylesheet" href="/stylesheets/headerStyling.css">
    <link rel="stylesheet" href="/stylesheets/footerStyling.css">

    <!-- Get the interact.js library into the front end scope -->
    <script src="https://cdn.jsdelivr.net/npm/interactjs@1.3.3/dist/interact.min.js"></script>

    <!-- My custom behaviour scripts: Functions and controller calls -->
    <script src="/javascripts/clientAjaxRequests.js"></script> <!-- logic for handling AJAX http requests for app saving and loading from server -->
    <script src="/javascripts/interactjsFunctionality.js"></script> <!-- integration logic with interact.js library for node behaviour, and funciton callbacks -->
    <script src="/javascripts/canvasController.js"></script> <!-- controller logic for tracking nodes on the canvas -->
    <script src="/javascripts/sidebarController.js"></script> <!-- controller logic for keeping the sidebar synced to the canvas -->
    <script src="/javascripts/helpPageController.js"></script> <!-- controller logic for opening and closing the help window -->
    <script src="/javascripts/nodeParser.js"></script> <!-- logic for serialising and parsing state objects into JSON for saving and loading -->


    <!-- My custom behaviour scripts: Class definitions and Prototypes -->
    <script src="/javascripts/ContentNode.js"></script>
    <script src="/javascripts/HierarchicalRelationship.js"></script>
    <script src="/javascripts/RenderLine.js"></script>
    <script src="/javascripts/SidebarElement.js"></script>
</head>

<!-- -------------------------------------------------------------- -->

<body>

    <!-- HEADER. Will render at the y of every page, and server as a nav bar for the main site pages -->
    <header>
        <% include ../partials/header.ejs %>
    </header>

    <!-- MAIN CONTENT -->
    <main>
        <div id="mainAppContainer" class="wrapper">
            <!-- include the 'sidebar' partial, which forms the list view of all nodes -->
            <% include ../partials/sidebar.ejs %>
            <!-- include the 'canvas' partial, which forms the main functionality of the application -->
            <% include ../partials/nodeCanvas.ejs %>
            <!-- include the 'edit window' partial, which the users edit context nodes in -->
            <% include ../partials/popupEditWindow.ejs %>
            <!-- include the 'loading-screen window' partial, which is displayed with a message to indicate data is loading from the server -->
            <% include ../partials/loadingWindow.ejs %>

            <!-- this div allows us to create a blackout effect -->
            <div class="black-overlay" id="fade"></div>
        </div>
    </main>

    <!-- FOOTER. Will render at the bottom of every page on the website, ideally! -->
    <footer>
        <% include ../partials/footer.ejs %>
    </footer>

</body>

</html>