<!-- ejs to represent the popup window where the user can inspect the help page -->
<div class="white-content carousel slide" id="popupHelpWindow" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#popupHelpWindow" data-slide-to="0" class="active"></li>
            <li data-target="#popupHelpWindow" data-slide-to="1"></li>
            <li data-target="#popupHelpWindow" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="/images/1.png" alt="CreateNode">
            </div>
            <div class="item">
                <img src="/images/2.png" alt="ConnectNodes">
            </div>
            <div class="item">
                <img src="/images/3.png" alt="GoToNode">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#popupHelpWindow" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#popupHelpWindow" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    <button id="closeHelpWindowButton" onclick="closeHelpWindow()">Close</button>
</div>